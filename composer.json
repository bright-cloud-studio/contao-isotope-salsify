{
    "name":"bright-cloud-studio/contao-isotope-salsify",
    "description":"Integrates Salsify into Contao and Isotope",
    "keywords": ["contao", "isotope", "salsify", "bright", "cloud", "studio"],
    "type": "contao-bundle",
    "homepage": "http://brightcloudstudio.com/",
    "license": "LGPL-3.0+",
    "authors":[
        {
            "name": "Bright Cloud Studio",
            "homepage": "https://brightcloudstudio.com",
            "email": "mark@brightcloudstudio.com",
            "role": "Developer"
        }
    ],
    "support":{
        "issues": "https://github.com/bright-cloud-studio/contao-isotope-salsify/issues",
        "source": "https://github.com/bright-cloud-studio/contao-isotope-salsify"
    },
    "require":{
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.13"
    },
    "extra":{
        "contao-manager-plugin": "Bcs\\SalsifytBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\SalsifytBundle\\": "src"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    }
}
